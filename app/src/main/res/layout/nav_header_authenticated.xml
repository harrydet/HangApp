<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" android:orientation="vertical"
    android:gravity="bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header_profile_picture"
        android:src="@drawable/example_profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:layout_gravity="center_horizontal"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="@string/name_placeholder_string"
        android:layout_gravity="center_horizontal"
        android:id="@+id/header_user_name"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/header_user_email"
        android:text="@string/email_plceholder_string"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
